{
  "name": "@tillycode/blog",
  "version": "0.1.0",
  "description": "My next generation personal blog powered by Vue 3 and VitePress",
  "private": true,
  "workspaces": [
    "packages/@tillycode/*",
    "site"
  ],
  "scripts": {
    "watch": "nodemon",
    "lint": "eslint \"packages/@tillycode/{vitepress,vitepress-plugin-blog,vitepress-plugin-mathjax}/{scripts,src}/**/*.{js,ts,vue}\"",
    "format:js": "prettier --check --write \"packages/@tillycode/vitepress/scripts/**/*.js\"",
    "format:ts": "prettier --check --write --parser typescript \"packages/@tillycode/vitepress/src/**/*.ts\"",
    "build": "yarn run build:md-chain && yarn run build:vitepress && run-p build:plugin-blog build:plugin-mathjax build:theme-vue",
    "build:vitepress": "cd packages/@tillycode/vitepress && yarn run build",
    "build:md-chain": "cd packages/@tillycode/markdown-it-chain && yarn run build",
    "build:plugin-blog": "cd packages/@tillycode/vitepress-plugin-blog && yarn run build",
    "build:plugin-mathjax": "cd packages/@tillycode/vitepress-plugin-mathjax && yarn run build",
    "build:theme-vue": "cd packages/@tillycode/vitepress-theme-vue && yarn run build",
    "build:site": "vitepress build --root site",
    "start": "vitepress dev --root site",
    "postinstall": "lerna link && husky install"
  },
  "devDependencies": {
    "@types/es-module-lexer": "^0.3.0",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-typescript": "^7.0.0",
    "es-module-lexer": "^0.4.1",
    "eslint": "^7.23.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-vue": "^7.8.0",
    "husky": "^6.0.0",
    "lerna": "^4.0.0",
    "markdownlint-cli2": "^0.0.15",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1"
  }
}
