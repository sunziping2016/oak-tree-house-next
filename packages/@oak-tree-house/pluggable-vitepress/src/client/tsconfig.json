{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "../../dist/client",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es6",
    "strict": true,
    "declaration": true,
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "sourceMap": true,
    "types": [
      "vite/client",
      "node"
    ],
    "paths": {
      "@types": ["../shared/types.d.ts"],
      "@theme/*": ["theme-default/*"]
    }
  },
  "include": [
    ".",
    "../shared"
  ]
}
